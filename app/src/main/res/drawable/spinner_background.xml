<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#d3d3d3"
                        android:width="1dp"/>
                    <padding android:left="7dp"
                        android:right="10dp"/>
                    <gradient android:startColor="#d3d3d3"
                        android:angle="90"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ic_arrow_down"
                android:width="32dp"
                android:gravity="end"/>

        </layer-list>
    </item>
</selector>